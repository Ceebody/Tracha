<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/terms_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/terms_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#000000"
            android:text="Welcome to Tracha X. Below are the rules and policies for using this application:\n\n"
            android:paddingBottom="16dp" />

        <CheckBox
            android:id="@+id/accept_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept the Terms and Conditions"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="@color/purple_500"
            android:textSize="20dp"
            android:enabled="false"
            android:backgroundTint="#E1DBE9"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
